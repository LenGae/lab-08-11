<Window x:Class="WpfApp8.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        xmlns:vm="clr-namespace:WpfApp8.ViewModels"
        xmlns:conv="clr-namespace:WpfApp8.Converters"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="856">

    <d:Window.DataContext>
        <vm:ViewModel/>
    </d:Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Добавить" Width="100" Height="35" Margin="5" Click="AddUser"/>
            <Button Content="Удалить" Width="100" Height="35" Margin="5"
                    Command="{Binding DelUserCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=UsersDataGrid}"/>

        </StackPanel>

        <DataGrid x:Name="UsersDataGrid" ItemsSource="{Binding Collection3}" Grid.Row="1"/>
    </Grid>

</Window>
